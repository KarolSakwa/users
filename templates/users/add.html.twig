{% extends 'base.html.twig' %}

{% block title %} Dodawanie użytkownika{% endblock %}

{% block body %}
    <div class="users-container">
        <div style="margin-bottom: 20px;" class="row">
            <div class="col-10">
                <h5>Dodawanie nowego użytkownika</h5>
            </div>
            <div class="col-2">
                <a href="/"><button type="button" class="btn btn-secondary"><i class="bi bi-arrow-return-left mx-2"></i>Wróć</button></a>
            </div>
        </div>

        <div class="form-container">
            {{ form_start(userForm) }}
            {{ form_widget(userForm) }}
            <button class="btn btn-success btn-lg" name="userSubmit">Zapisz</button>
            {{ form_end(userForm) }}
        </div>
    </div>
{% endblock %}